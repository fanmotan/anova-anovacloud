<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
    <ui:with field='caseNumber' type='java.lang.String'/>
    <ui:with field='title' type='java.lang.String'/>
    <ui:with field='status' type='java.lang.String'/>
    <ui:with field='dueDate' type='java.lang.String'/>
    <ui:with field='actionDue' type='java.lang.String'/>
    <ui:with field='atty' type='java.lang.String'/>
    <ui:with field='actionRemarks' type='java.lang.String'/>

    <ui:style>
        .listItemWrapper {
            padding: 15px 10px;
        }

        .floatLeft {
            float: left;
            font-size: 1em;
        }

        .floatRight {
            float: right;
            color: #ababab;
            font-weight: bold;
            font-size: 1.1em;
        }

        .clear {
            clear: both;
        }
    </ui:style>

    <div class="{style.listItemWrapper}">
        <div class="{style.floatLeft}">
            <ui:text from="{caseNumber}"/>
        </div>
         <div>
            <ui:text from="{title}"/>
        </div>
        <div >
            <ui:text from="{status}"/>
        </div>
        <div>
            <ui:date from="{dueDate}"/>
        </div>
         <div>
            <ui:text from="{actionDue}"/>
        </div>
        <div >
            <ui:text from="{atty}"/>
        </div>
        <div >
            <ui:text from="{actionRemarks}"/>
        </div>

        <div class="{style.clear}"/>
    </div>
</ui:UiBinder>
