<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
    <ui:with field='name' type='java.lang.String'/>
    <ui:with field='dueDate' type='java.util.Date'/>
    <ui:with field='actionDue' type='java.lang.String'/>
    <ui:with field='ptoMailDate' type='java.util.Date'/>
    <ui:with field='responseDate' type='java.util.Date'/>
    <ui:with field='takenDate' type='java.util.Date'/>
    <ui:with field='atty' type='java.lang.String'/>
    <ui:with field='actionRemarks' type='java.lang.String'/>

    <ui:style>
        .listItemWrapper {
            padding: 15px 10px;
        }

        .floatLeft {
            float: left;
            font-size: 1em;
        }

        .floatRight {
            float: right;
        }

        .subtitle {
            color: #ababab;
            font-weight: bold;
            margin-top: 5px;
        }

        .clear {
            clear: both;
        }
    </ui:style>

    <div class="{style.listItemWrapper}">
        <div class="{style.floatLeft}">
            <div>
                <ui:text from="{name}"/>
            </div>
            <div class="{style.subtitle}">
                <ui:date from="{dueDate}"/>
            </div>
            <div class="{style.subtitle}">
                <ui:text from="{actionDue}"/>
            </div>
            <div class="{style.subtitle}">
                <ui:date from="{ptoMailDate}"/>
            </div>
             <div class="{style.subtitle}">
                <ui:date from="{responseDate}"/>
            </div>
            <div class="{style.subtitle}">
                <ui:date from="{takenDate}"/>
            </div>
            <div class="{style.subtitle}">
                <ui:text from="{atty}"/>
            </div>
             <div class="{style.subtitle}">
                <ui:text from="{actionRemarks}"/>
            </div>
        </div>
        
        <div class="{style.floatRight}">
            <div class="removeButton" ui:field="remove">
                Remove
            </div>
        </div>

        <div class="{style.clear}"/>
    </div>
</ui:UiBinder>
