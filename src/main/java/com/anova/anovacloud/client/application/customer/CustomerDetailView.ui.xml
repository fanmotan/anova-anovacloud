<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resource" type="com.anova.anovacloud.client.resources.AppResources"/>

    <ui:style>
        .panelWrapper {
            padding: 10px;
            padding-top: 20px;
            font-size: 0.75em;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.panelWrapper}">
        <g:TextBox ui:field="name" styleName="{resource.styles.mobileTextField}"/>
         <g:TextBox ui:field="refNum" styleName="{resource.styles.mobileTextField}"/>
          <g:TextArea ui:field="address" styleName="{resource.styles.mobileTextField}"/>
           <g:TextBox ui:field="email" styleName="{resource.styles.mobileTextField}"/>
            <g:TextBox ui:field="phone" styleName="{resource.styles.mobileTextField}"/>
             <g:TextBox ui:field="fax" styleName="{resource.styles.mobileTextField}"/>
             <g:ListBox ui:field="status" styleName="{resource.styles.mobileTextField}">
		                		<g:item>active</g:item>
		                		<g:item>inactive</g:item>
		      </g:ListBox>
		                		    
    </g:HTMLPanel>
</ui:UiBinder>
