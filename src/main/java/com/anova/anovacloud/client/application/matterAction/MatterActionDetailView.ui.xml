<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
 xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
    <ui:with field="resource" type="com.anova.anovacloud.client.resources.AppResources"/>

    <ui:style>
        .panelWrapper {
            padding: 10px;
            padding-top: 20px;
        }

        .formRow {
            margin-bottom: 10px;
        }

        .formRow select {
            width: 100%;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.panelWrapper}">
        <div class="{style.formRow}">
        	<g:InlineLabel>Case Number:</g:InlineLabel>
            <g:ValueListBox ui:field="matter"/>
        </div>
        
        <div>
                <g:InlineLabel>Due Date:</g:InlineLabel>
                <d:DateBox ui:field="dueDate"  styleName="{resource.styles.mobileTextField}" debugId="dueDateInput"/>
            </div>
            <div>
                <g:InlineLabel>Action Due:</g:InlineLabel>
                <g:TextBox ui:field="actionDue" styleName="{resource.styles.mobileTextField}" debugId="actionDueInput"/>
            </div>
			<div>
                <g:InlineLabel>PTO Mail Date:</g:InlineLabel>
                <d:DateBox ui:field="ptoMailDate"  styleName="{resource.styles.mobileTextField}" debugId="ptoMailDateInput"/>
            </div>
            <div>
                <g:InlineLabel>Respone Date:</g:InlineLabel>
                <d:DateBox ui:field="responseDate" styleName="{resource.styles.mobileTextField}"  debugId="responseDateInput"/>
            </div>
             <div>
                <g:InlineLabel>Date Taken:</g:InlineLabel>
                <d:DateBox ui:field="takenDate" styleName="{resource.styles.mobileTextField}" debugId="takenDateInput"/>
            </div>
            <div>
                <g:InlineLabel>Assignee1:</g:InlineLabel>
                <g:ValueListBox ui:field="assignee1" styleName="{resource.styles.mobileTextField}" debugId="assignee1Input"/>
            </div>
            <div>
                <g:InlineLabel>Assignee1 Role:</g:InlineLabel>
                <g:ValueListBox ui:field="assignee1Role" styleName="{resource.styles.mobileTextField}" debugId="assignee1RoleInput"/>
            </div>
            <div>
                <g:InlineLabel>Assignee2:</g:InlineLabel>
                <g:ValueListBox ui:field="assignee2" styleName="{resource.styles.mobileTextField}"  debugId="assignee2Input"/>
            </div>
            <div>
                <g:InlineLabel>Assignee2 Role:</g:InlineLabel>
                <g:ValueListBox ui:field="assignee2Role" styleName="{resource.styles.mobileTextField}" debugId="assignee2RoleInput"/>
            </div>
            <div>
                <g:InlineLabel>Assignee3:</g:InlineLabel>
                <g:ValueListBox ui:field="assignee3" styleName="{resource.styles.mobileTextField}"  debugId="assignee3Input"/>
            </div>
            <div>
                <g:InlineLabel>Assignee3 Role:</g:InlineLabel>
                <g:ValueListBox ui:field="assignee3Role" styleName="{resource.styles.mobileTextField}" debugId="assignee3RoleInput"/>
            </div>
            <div>
                <g:InlineLabel>Action Remarks:</g:InlineLabel>
                <g:TextBox ui:field="actionRemarks" styleName="{resource.styles.mobileTextField}" debugId="actionRemarksInput"/>
            </div>
            <div>
                <g:InlineLabel>Action Status:</g:InlineLabel>
                <g:ValueListBox ui:field="actionStatus" styleName="{resource.styles.mobileTextField}" debugId="actionStatusInput"/>
            </div>
    </g:HTMLPanel>
</ui:UiBinder>
