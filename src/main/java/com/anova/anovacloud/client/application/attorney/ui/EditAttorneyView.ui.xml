<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
     <ui:style>
        .formRow {
            margin-bottom: 5px;
            margin-top: 5px;
        }
    </ui:style>
    
    <g:PopupPanel glassEnabled="true" autoHideEnabled="true" animationEnabled="true">
        <g:HTMLPanel debugId="attorney-editor">
        <div>
                	<g:InlineLabel>Please fill in or modify the following attorney information:</g:InlineLabel>
        </div>
        <br />
        <table width="100%">
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Display Name:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">
                	<g:TextBox ui:field="displayName" debugId="attorney-input"/>
            	</div>
            </td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>First Name:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">	
                	<g:TextBox ui:field="firstName" debugId="attorney-input"/>
            	</div>
           </td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Last Name:</g:InlineLabel>
               </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">	 
                	<g:TextBox ui:field="lastName" debugId="attorney-input"/>
           		</div>
           	</td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                <g:InlineLabel>Email:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">	
                	<g:TextBox ui:field="email" debugId="attorney-input"/>
            	</div>
            </td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Mailing Address:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">
                	<g:TextArea ui:field="mailAddress" debugId="attorney-input"/>
            	</div>
             </td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Phone:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}"> 
                	<g:TextBox ui:field="phone" debugId="attorney-input"/>
            	</div>
             </td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Fax:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">
                	<g:TextBox ui:field="fax" debugId="attorney-input"/>
            	</div>
			</td>
        </tr>
        <tr>
            <td width="25%">
				<div class="{style.formRow}">
                	<g:InlineLabel>Status:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">
                	<g:ValueListBox ui:field="attorneyStatus" debugId="attorney-input"/>
                	
            	</div>
            </td>
            </tr>
        </table>
            	<div class="{style.formRow}">
                <g:Button ui:field="save" debugId="attorney-save">Save</g:Button>
                <g:Button ui:field="close" debugId="attorney-close">Close</g:Button>
            </div>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
