<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
     <ui:style>
        .formRow {
            margin-bottom: 5px;
            margin-top: 5px;
        }
    </ui:style>
    
    <g:PopupPanel glassEnabled="true" autoHideEnabled="true" animationEnabled="true">
        <g:HTMLPanel debugId="user-editor">
        <div>
                	<g:InlineLabel>Please fill in or modify the following user information:</g:InlineLabel>
        </div>
        <br />
        <table width="100%">
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>First Name:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">	
                	<g:TextBox ui:field="firstName" debugId="user-input"/>
            	</div>
           </td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Last Name:</g:InlineLabel>
               </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">	 
                	<g:TextBox ui:field="lastName" debugId="user-input"/>
           		</div>
           	</td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Username:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">	
                	<g:TextBox ui:field="username" debugId="user-input"/>
           		</div>
           </td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Password:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">	
                	<g:PasswordTextBox ui:field="hashPassword" debugId="user-input"/>
           		</div>
           	 </td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Role:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">	
                	 <g:ValueListBox ui:field="userRole" debugId="user-role-input"/>
                		     				
           		</div>
           	</td>
        </tr>
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                <g:InlineLabel>Email:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">	
                	<g:TextBox ui:field="email" debugId="user-input"/>
            	</div>
            </td>
        </tr>
       
        </table>
            	<div class="{style.formRow}">
                <g:Button ui:field="save" debugId="user-save">Save</g:Button>
                <g:Button ui:field="close" debugId="user-close">Close</g:Button>
            </div>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
