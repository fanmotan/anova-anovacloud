<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .formRow {
            margin-bottom: 5px;
            margin-top: 5px;
        }
    </ui:style> 
   
    <g:PopupPanel glassEnabled="true" autoHideEnabled="true" animationEnabled="true">
        <g:HTMLPanel debugId="customer-editor">
        <div>
                	<g:InlineLabel>Please fill in or modify the following customer information:</g:InlineLabel>
        </div>
        <br />
        <table width="100%">
        <tr>
        	<td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Name:</g:InlineLabel>
                </div>
            </td>
             <td width="75%">
                <div class="{style.formRow}">
                	<g:TextBox ui:field="name" debugId="customer-input"/>
            	</div>
            </td>
         </tr>
         <tr>
            <td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Ref Num:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">
                	<g:TextBox ui:field="code" debugId="customer-input"/>
            	</div>
            </td>
         </tr>
         <tr>
            <td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Address:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
            	<div class="{style.formRow}">
                	<g:TextArea ui:field="address" debugId="customer-input"/>
           		</div>
           	</td>
         </tr>
         <tr>
            <td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Email:</g:InlineLabel>
                 </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">
                	<g:TextBox ui:field="email" debugId="customer-input"/>
            	</div>
            </td>
         </tr>
         <tr>
               <td width="25%">
             		<div class="{style.formRow}">
                		<g:InlineLabel>Phone:</g:InlineLabel>
              		</div>
              </td>
              <td width="75%">
             	 <div class="{style.formRow}">
                		<g:TextBox ui:field="phone" debugId="customer-input"/>
            	</div>
            </td>
        </tr>
        <tr>
            <td width="25%">
            	<div class="{style.formRow}">
                	<g:InlineLabel>Fax:</g:InlineLabel>
                </div>
             </td>
             <td width="75%">
                <div class="{style.formRow}">
                	<g:TextBox ui:field="fax" debugId="customer-input"/>
            	</div>
            </td>
         </tr>
         <tr>
            <td width="25%">
				<div class="{style.formRow}">
                	<g:InlineLabel>Status:</g:InlineLabel>
                </div>
            </td>
            <td width="75%">
                <div class="{style.formRow}">
                	<g:ValueListBox ui:field="customerStatus" debugId="customer-input"/>
                	
            	</div>
            </td>
            </tr>
            </table>
            <div class="{style.formRow}">
                <g:Button ui:field="save" debugId="customer-save">Save</g:Button>
                <g:Button ui:field="close" debugId="customer-close">Close</g:Button>
            </div>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
